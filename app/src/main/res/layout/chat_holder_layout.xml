<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_image_chat_holder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="center"
            android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout_6"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/receiver_name_chat_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:maxLength="20"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/black"/>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/sim_receiver_image_chat_holder"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:shapeAppearanceOverlay="@style/Circular"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:background="@color/white_blue"
                        app:strokeColor="@null"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center" />
                </LinearLayout>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/date_last_message_chat_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/gray"/>
                </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_centerVertical="true"
              android:layout_marginEnd="40dp"
              android:layout_toStartOf="@id/new_message_notification_chat_holder">

              <TextView
                  android:id="@+id/chat_title_chat_holder"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="15dp"
                  android:maxLines="1"
                  android:ellipsize="end"
                  android:layout_marginEnd="10dp"
                  android:layout_marginStart="5dp"
                  android:text="text"
                  android:textColor="@color/white"
                  android:background="@drawable/curved_background_white_blue"
                  android:backgroundTint="@color/background"
                  android:paddingEnd="5dp"
                  android:paddingStart="5dp"
                />
          </LinearLayout>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/new_message_notification_chat_holder"
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/Circular"
                app:strokeColor="@null"
                android:layout_centerVertical="true"
                android:background="@color/background"
                android:layout_alignParentEnd="true"
                />
</RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/message_status_chat_holder"
                    android:layout_gravity="center"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/message_not_sent"
                   />
                <ImageView
                    android:id="@+id/image_icon_chat_holder"
                    android:layout_gravity="center"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="5dp"
                    android:visibility="gone"

                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/message_status_chat_holder"
                    android:src="@drawable/image_icon"
                    />
                <TextView
                    android:id="@+id/last_message_chat_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:maxLength="30"
                    android:ellipsize="end"
                    android:layout_toEndOf="@id/image_icon_chat_holder"
                    android:layout_marginEnd="5dp"
                    android:textSize="15dp"
                    android:textColor="@color/gray"/>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
