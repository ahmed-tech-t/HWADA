<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_image_chat_holder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@color/white_gray"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@null"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/chat_title_chat_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textSize="18dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/date_last_message_chat_holder"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/date_last_message_chat_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:5"
                    android:layout_marginEnd="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/gray"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/message_status_chat_holder"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/message_un_read"
                   />
                <TextView
                    android:id="@+id/last_message_chat_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اخر رساله"
                    android:maxLines="1"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/gray"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
