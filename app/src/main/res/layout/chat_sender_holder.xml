<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="end"
    android:layout_marginTop="10dp"
    android:layout_marginStart="40dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_background_bubble_chat_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/square_chat_bubble_sender">
        <LinearLayout
            android:id="@+id/ll_parent_bubble_chat_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp">

            <LinearLayout
                android:id="@+id/ll_child_body_bubble_chat_sender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/sim_body_chat_sender_holder"
                    android:layout_width="250dp"
                    android:layout_weight="1"
                    app:strokeColor="@null"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ChatImages"
                    android:adjustViewBounds="true"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"
                    android:layout_height="250dp"/>
                <TextView
                    android:id="@+id/tv_body_chat_sender_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="3dp"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginStart="6dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_date_chat_sender_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_Chateau"
                    android:textSize="12dp"
                    android:layout_marginTop="3dp"
                    android:gravity="bottom"
                    android:text="6:55 pm"/>
                <ImageView
                    android:id="@+id/im_message_status_chat_sender_holder"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/message_not_sent"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>