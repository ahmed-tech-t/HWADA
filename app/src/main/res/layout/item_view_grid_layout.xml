<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    app:cardElevation="0dp"
    android:id="@+id/card_view_item_view_grid_layout"
    app:cardCornerRadius="20dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_fav_grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                android:padding="10dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/fav_uncheck_icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_user_image_design_grid_layout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:background="@color/white_blue"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                app:strokeColor="@null" />

            <ProgressBar
                android:id="@+id/progress_bar_item_view_grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/white"
                android:indeterminateTintMode="src_atop"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/item_title_design_grid_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_user_image_design_grid_layout"
            android:textColor="@color/black"
            android:paddingTop="5dp"
            android:textSize="15dp"
            android:maxLines="2"
            android:text="this is title fofg rgojrg"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:paddingStart="5dp"/>
        <LinearLayout
            android:id="@+id/linearLayout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            android:layout_below="@id/item_title_design_grid_layout"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_price_grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/white"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textStyle="bold"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textSize="12dp"
                android:backgroundTint="@color/green"
                android:background="@drawable/curved_background_white_blue"
                android:text="451"/>


            <TextView
                android:id="@+id/item_user_rating_grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLength="3"
                android:drawableStart="@drawable/star_small_icon"
                android:drawablePadding="5dp"
                android:gravity="bottom"
                android:text="3.5"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/linearLayout_3"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="bottom"
                android:text="@string/withInRange"

                android:drawableStart="@drawable/distance_small_icon"
                android:drawablePadding="5dp"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/item_user_distance_grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:textStyle="bold"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textSize="10dp"
                android:textStyle="bold"
                android:text="@string/km" />

        </LinearLayout>



            <TextView
                android:id="@+id/item_date_grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:layout_below="@id/linearLayout_4"
                android:drawableStart="@drawable/calendar_small_icon"
                android:drawablePadding="5dp"
                android:gravity="bottom"
                android:layout_marginStart="5dp"
                android:text="4 sep"
                android:textSize="10dp"
                android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>