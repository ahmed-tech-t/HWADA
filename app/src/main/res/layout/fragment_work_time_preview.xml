<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/white_background"
android:orientation="vertical"
    android:id="@+id/bottom_sheet_work_time_preview"
android:layout_marginTop="60dp"
tools:context=".ui.view.WorkTimePreviewFragment">

<ImageView
    android:id="@+id/arrow_work_time"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/arrow_down"
    android:padding="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workingTime"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/image_picker_frame"
                android:text="@string/instructionsWorkTime"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switch_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/saturday"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <Button
                    android:id="@+id/button_saturday_work_time"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:background="@drawable/button_save_blue" />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_saturday"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switch_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/sunday"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <Button
                    android:id="@+id/button_sunday_work_time"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:background="@drawable/button_save_blue" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_sunday"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switch_monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/monday"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <Button
                    android:id="@+id/button_Monday_work_time"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:background="@drawable/button_save_blue" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_monday"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switch_tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/tuesday"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <Button
                    android:id="@+id/button_tuesday_work_time"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:background="@drawable/button_save_blue" />


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_tuesday"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switch_wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/wednesday"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <Button
                    android:id="@+id/button_wednesday_work_time"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:background="@drawable/button_save_blue" />


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_wednesday"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switch_thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/thursday"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>

                <Button
                    android:id="@+id/button_thursday_work_time"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/add"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:background="@drawable/button_save_blue" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_thursday"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/switch_friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/friday"
                    android:textColor="@color/black"
                    android:textSize="15dp"/>
                <Button
                    android:id="@+id/button_friday_work_time"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/add"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:background="@drawable/button_save_blue" />


            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_friday"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/save_button_add_new_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/save"
                android:background="@drawable/button_save_blue"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="30dp"
                android:textSize="18dp"/>
        </LinearLayout>



    </ScrollView>
</LinearLayout>


