<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@color/shimmer"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedSquare"
                    app:strokeColor="@null" />

            </RelativeLayout>


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/shimmer"
                android:background="@drawable/curved_background_white_blue"
                android:padding="5dp"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:layout_below="@id/item_title_design_grid_layout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/shimmer"
                    android:background="@drawable/curved_background_white_blue"
                    android:padding="1dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/shimmer"
                    android:background="@drawable/curved_background_white_blue"
                    android:padding="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/distance_small_icon"
                    android:drawablePadding="5dp"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/shimmer"
                    android:background="@drawable/curved_background_white_blue"
                    android:padding="1dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="3dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/calendar_small_icon"
                    android:drawablePadding="5dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/shimmer"
                    android:background="@drawable/curved_background_white_blue"
                    android:padding="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@color/shimmer"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/RoundedSquare"
                    app:strokeColor="@null" />

            </RelativeLayout>


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/shimmer"
                android:background="@drawable/curved_background_white_blue"
                android:padding="5dp"
                android:layout_marginTop="3dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:layout_below="@id/item_title_design_grid_layout"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/shimmer"
                    android:background="@drawable/curved_background_white_blue"
                    android:padding="1dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/shimmer"
                    android:background="@drawable/curved_background_white_blue"
                    android:padding="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/distance_small_icon"
                    android:drawablePadding="5dp"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/shimmer"
                    android:background="@drawable/curved_background_white_blue"
                    android:padding="1dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="3dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableStart="@drawable/calendar_small_icon"
                    android:drawablePadding="5dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/shimmer"
                    android:background="@drawable/curved_background_white_blue"
                    android:padding="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>